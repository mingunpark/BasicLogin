<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mgnoid.basiclogin.UserInfo">

    <ImageView
        android:id="@+id/img_me"
        android:layout_width="128dp"
        android:layout_height="151dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/img_me"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_name"
        app:layout_constraintTop_toTopOf="@+id/img_me"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="TextView"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_phone"
        app:layout_constraintLeft_toRightOf="@+id/img_me"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/img_me"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_me"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img_me"
        app:layout_constraintRight_toLeftOf="@+id/txt_phone"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/img_me"
        app:layout_constraintHorizontal_bias="0.343" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/img_me"
        app:layout_constraintBottom_toBottomOf="@+id/btn_camera"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/txt_name" />
</android.support.constraint.ConstraintLayout>
