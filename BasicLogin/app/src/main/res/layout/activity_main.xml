<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mgnoid.basiclogin.MainActivity">

    <EditText
        android:id="@+id/edt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ID"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/edt_pass"
        android:layout_alignStart="@+id/edt_pass" />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_below="@+id/edt_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <Button
        android:id="@+id/btn_In"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_alignBottom="@+id/buttonId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/btn_Up"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:onClick="toSignUp"
        android:layout_alignBaseline="@+id/btn_In"
        android:layout_alignBottom="@+id/btn_In"
        android:layout_toRightOf="@+id/btn_In"
        android:layout_toEndOf="@+id/btn_In" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/buttonId"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="380dp"
        android:onClick="toMain"
        android:padding="20dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/title"
        android:layout_above="@+id/edt_pass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp" />

</RelativeLayout>
